<h2 class="text-center mt-5 mb-3 font-weight-bold">新增支出</h2>
<div class="row justify-content-center my-3">
  <div class="col-12 col-md-10 col-lg-8">
    <form action="/records" method="post">
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">名稱</label>
        <div class="col-sm-10">
          <input type="text" name="name" class="form-control" id="name" required>
        </div>
      </div>
      <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label">日期</label>
        <div class="col-sm-10">
          <input type="date" name="date" class="form-control" id="date" required>
        </div>
      </div>
      <fieldset class="form-group row">
        <legend class="col-form-label col-sm-2 float-sm-left pt-0" for="exampleFormControlSelect1">類別</legend>
        <div class="col-sm-10">
          <select name="category" class="form-control" id="category" required>
            {{#each categories}}
            <option value="{{ this.name }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
      </fieldset>
      <div class="form-group row">
        <label for="merchant" class="col-sm-2 col-form-label">店家</label>
        <div class="col-sm-10">
          <input type="text" name="merchant" class="form-control" id="merchant">
        </div>
      </div>
      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label">金額</label>
        <div class="col-sm-10">
          <input type="number" name="amount" class="form-control" id="amount" min="1" required>
        </div>
      </div>
      <div class="form-group row justify-content-center mt-5">
        <div class="col-sm-10 text-center">
          <button type="submit" class="btn btn-primary">新增支出</button>
        </div>
      </div>
    </form>
  </div>
</div>